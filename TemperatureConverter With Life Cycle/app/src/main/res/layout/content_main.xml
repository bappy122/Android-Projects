<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ak_bappy.temperatureconverter.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/cp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter Temperature"
            android:id="@+id/textView"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/enteredTemperature"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView3"
            android:text="From : "
            android:textColor="#ffffff"
            android:layout_weight="0.05" />

        <CheckBox
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="Kelvin"
            android:id="@+id/kelvinFromCheckBox"
            android:textColor="#ffffff"
            android:checked="false"
            android:textSize="16dp" />

        <CheckBox
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Fahrenheit"
            android:id="@+id/farFromCheckBox"
            android:textColor="#ffffff"
            android:checked="false"
            android:textSize="16dp" />

        <CheckBox
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="Celsius"
            android:id="@+id/celFromCheckBox"
            android:textColor="#ffffff"
            android:checked="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="To :"
            android:id="@+id/textView2"
            android:textColor="#ffffff" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelvin"
            android:id="@+id/kelvinToCheckBox"
            android:textColor="#ffffff"
            android:checked="false"
            android:textSize="16dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fahrenheit"
            android:id="@+id/farToCheckBox"
            android:textColor="#ffffff"
            android:checked="false"
            android:textSize="16dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celsius"
            android:id="@+id/celToCheckBox"
            android:textColor="#ffffff"
            android:checked="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView7" />

        <Button
            android:layout_width="131dp"
            android:layout_height="52dp"
            android:text="Convert"
            android:background="@drawable/transparent_border"
            android:onClick="convertButtonAction"
            android:id="@+id/convertButton"
            android:textSize="16dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="131dp"
            android:layout_height="52dp"
            android:text="Refresh"
            android:background="@drawable/transparent_border"
            android:onClick="refreshAction"
            android:id="@+id/refreshButton"
            android:textSize="16dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Result"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/resultBox"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

    </LinearLayout>
</RelativeLayout>
