<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ak_bappy.componentswidgets.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome User"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a Visual Tour of Components &amp; Widgets of Android"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="DatePicker"
        android:id="@+id/button"
        android:onClick="datePickerAction"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Timepicker"
        android:onClick="timePickerAction"
        android:id="@+id/button2"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Spinner"
        android:id="@+id/button3"
        android:onClick="spinnerBtnAction"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="CheckBox"
        android:onClick="checkboxAction"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:onClick="listViewAction"
        android:text="ListView"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button25"
        android:layout_alignStart="@+id/button25" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Frame Layout"
        android:onClick="frameAction"
        android:id="@+id/button25"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Grid Layout"
        android:onClick="gridAction"
        android:id="@+id/button26"
        android:layout_below="@+id/button25"
        android:layout_alignLeft="@+id/button25"
        android:layout_alignStart="@+id/button25" />

</RelativeLayout>
