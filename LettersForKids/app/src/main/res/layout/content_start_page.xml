<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cp"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ak_bappy.lettersforkids.StartPage"
    tools:showIn="@layout/activity_start_page">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:foregroundGravity="center">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:foregroundGravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:background="@drawable/tback"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Learn  Letters"
                android:id="@+id/button6"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:onClick="onClickLetters" />

            <Button
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:background="@drawable/tback"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Guess  the  Letter"
                android:id="@+id/button7"
                android:layout_below="@+id/button6"
                android:layout_alignLeft="@+id/button6"
                android:layout_alignStart="@+id/button6"
                android:layout_marginBottom="50dp"
                android:onClick="onClickTest" />
        </LinearLayout>


    </ScrollView>


</RelativeLayout>
